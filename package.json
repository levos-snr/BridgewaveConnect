{
  "name": "bridgewaveconnect",
  "version": "1.1.0",
  "description": "BridgeWaveConnect: Seamlessly integrate M-Pesa Daraja API & enhance connectivity. Simplify mobile finance development.",
  "private": false,
  "main": "dist/index.js",
  "module": "dist/index.cjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "lint": "tsc",
    "release": "pnpm run lint && pnpm run build && changeset publish",
    "format": "prettier --no-error-on-unmatched-pattern warm --config ./.prettierrc --write \"**/*.{ts,yml,yaml,js,json,tsx}\"",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/levos-snr/bridgewaveconnect.git"
  },
  "keywords": [
    "BridgewaveConnect",
    "M-Pesa",
    "Daraja",
    "API",
    "Safaricom",
    "Daraja2.0"
  ],
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "bugs": {
    "url": "https://github.com/levos-snr/bridgewaveconnect/issues"
  },
  "homepage": "https://github.com/levos-snr/bridgewaveconnect#readme",
  "type": "module",
  "author": "Lewis Odero",
  "license": "MIT",
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.5.1",
    "@fortawesome/free-regular-svg-icons": "^6.5.1",
    "@fortawesome/free-solid-svg-icons": "^6.5.1",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@types/memory-cache": "^0.2.5",
    "axios": "^1.6.8",
    "base-64": "^1.0.0",
    "memory-cache": "^0.2.0",
    "tailwind-merge": "^2.2.2"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/base-64": "^1.0.2",
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.67",
    "css-loader": "^6.10.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "postcss-loader": "^8.1.1",
    "prettier": "3.2.5",
    "react": "^18.2.0",
    "style-loader": "^3.3.4",
    "tailwindcss": "^3.4.1",
    "tsup": "^8.0.2",
    "typescript": "^5.4.3",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4"
  },
  "peerDependencies": {
    "react": "^18"
  }
}
